@model prjCoreFT.Models.ActDetail

@{
    ViewData["Title"] = "ActCreate";
}

<h1>新增活動</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ActCreate" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">

            <input asp-for="活動編號" type="hidden" class="form-control" />
            <span asp-validation-for="活動編號" class="text-danger"></span>
            </div>*@
            <input type="hidden" name="活動編號" />
            <div class="form-group">
                <label asp-for="營區" class="control-label"></label>
                <input asp-for="營區" class="form-control" />
                <span asp-validation-for="營區" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="活動方式" class="control-label"></label>
                <input asp-for="活動方式" class="form-control" />
                <span asp-validation-for="活動方式" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="活動種類" class="control-label"></label>
                <input asp-for="活動種類" class="form-control" />
                <span asp-validation-for="活動種類" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="活動名稱" class="control-label"></label>
                <input asp-for="活動名稱" class="form-control" />
                <span asp-validation-for="活動名稱" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="開始日期" class="control-label"></label>
                <input asp-for="開始日期" class="form-control" />
                <span asp-validation-for="開始日期" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="結束日期" class="control-label"></label>
                <input asp-for="結束日期" class="form-control" />
                <span asp-validation-for="結束日期" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="預計人數" class="control-label"></label>
                <input asp-for="預計人數" class="form-control" />
                <span asp-validation-for="預計人數" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="活動介紹" class="control-label"></label>
                <input asp-for="活動介紹" class="form-control" />
                <span asp-validation-for="活動介紹" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="門票價格" class="control-label"></label>
                <input asp-for="門票價格" class="form-control" />
                <span asp-validation-for="門票價格" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">圖片</label>
                <input type="file" class="form-control" name="photo" />
            </div>
            <div class="form-group">
                <label asp-for="建立人" class="control-label"></label>
                <input asp-for="建立人" class="form-control" />
                <span asp-validation-for="建立人" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="建立時間" class="control-label"></label>
                <input asp-for="建立時間" class="form-control" />
                <span asp-validation-for="建立時間" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="修改人" class="control-label"></label>
                <input asp-for="修改人" class="form-control" />
                <span asp-validation-for="修改人" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="修改時間" class="control-label"></label>
                <input asp-for="修改時間" class="form-control" />
                <span asp-validation-for="修改時間" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確認" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ActList" >返回活動細項主頁</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}