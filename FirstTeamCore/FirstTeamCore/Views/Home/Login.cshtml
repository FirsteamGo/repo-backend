@model prjCoreFT.Models.CLoginMetadata
@{
    ViewData["Title"] = "Login";
}

<h1>野麓Yelu會員登入</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>請輸入帳號與密碼</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            帳號 
            <div class="col-md-10">
                @Html.TextBox("txtAccount", "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.txtAccount, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            密碼
            <div class="col-md-10">
                @Html.TextBox("txtPassword", "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.txtPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <input type="submit" value="登入" class="btn btn-primary mt-3" />
            </div>
        </div>
    </div>
}

