@model prjCoreFT.ViewModel.CSetOrderViewModel

@{
    ViewData["Title"] = "SetOrderCreate";
}

<h1>新增套裝訂單</h1>

<h4>套裝訂單</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SetOrderCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <label asp-for="套裝訂單id" class="control-label"></label>
                <input asp-for="套裝訂單id" class="form-control" />
                <span asp-validation-for="套裝訂單id" class="text-danger"></span>
            </div>*@
            
            <div class="form-group">
                <label asp-for="Product.套裝行程id" class="control-label" hidden></label>
                <input asp-for="Product.套裝行程id" class="form-control" id="CustomerOrderInput" hidden />
                <label class="control-label">套裝方案</label>
                <select id="CustomerOrderSelected" name="Product.套裝行程id" class="form-select">
                    <optgroup label="請選擇套裝方案">
                        <option selected disabled hidden>請選擇套裝方案</option>
                        @{
                            foreach (var item in Model.套裝行程表單)
                            {
                                <option value=@item.套裝行程id> @item.套裝方案</option>
                            }
                        }
                    </optgroup>
                </select>
                <span asp-validation-for="Product.套裝行程id" class="text-danger"></span>
            </div>


            
            <div class="form-group">
                <label asp-for="Product.會員id" class="control-label" hidden></label>
                <input asp-for="Product.會員id" class="form-control" id="CustomerMemberInput" hidden />
                <label class="control-label">會員</label>
                <select id="CustomerMemberSelected" name="Product.會員id" class="form-select">
                    <optgroup label="請選擇會員">
                        <option selected disabled hidden>請選擇會員</option>
                        @{
                            foreach (var item in Model.會員表單)
                            {
                                <option value=@item.會員id> @item.姓名</option>
                            }
                        }
                    </optgroup>
                </select>
                <span asp-validation-for="Product.會員id" class="text-danger"></span>
            </div>



            @*<div class="form-group">
                <label asp-for="套裝訂單編號" class="control-label"></label>
                <input asp-for="套裝訂單編號" class="form-control" />
                <span asp-validation-for="套裝訂單編號" class="text-danger"></span>
            </div>*@


            <div class="form-group">
                <label asp-for="入住時間" class="control-label"></label>
                <input asp-for="入住時間" class="form-control" />
                <span asp-validation-for="入住時間" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="退住時間" class="control-label"></label>
                <input asp-for="退住時間" class="form-control" />
                <span asp-validation-for="退住時間" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="預計人數" class="control-label"></label>
                <input asp-for="預計人數" class="form-control" />
                <span asp-validation-for="預計人數" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="合計總價" class="control-label"></label>
                <input asp-for="合計總價" class="form-control" />
                <span asp-validation-for="合計總價" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="評論" class="control-label"></label>
                <input asp-for="評論" class="form-control" />
                <span asp-validation-for="評論" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="評分" class="control-label"></label>
                <input asp-for="評分" class="form-control" />
                <span asp-validation-for="評分" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="建立人" class="control-label"></label>
                <input asp-for="建立人" class="form-control" />
                <span asp-validation-for="建立人" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="建立時間" class="control-label"></label>
                <input asp-for="建立時間" class="form-control" />
                <span asp-validation-for="建立時間" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="修改人" class="control-label"></label>
                <input asp-for="修改人" class="form-control" />
                <span asp-validation-for="修改人" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="修改時間" class="control-label"></label>
                <input asp-for="修改時間" class="form-control" />
                <span asp-validation-for="修改時間" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="確認套裝訂單" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SetOrder">返回訂單表單</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>       
        let CustomerOrderSelected = document.querySelector("#CustomerOrderSelected");
        let CustomerOrderInput = document.querySelector("#CustomerOrderInput");
        CustomerOrderSelected.addEventListener("change", function () {
            CustomerOrderInput.value = CustomerOrderSelected.value;
        })

    </script>
    <script>
        let CustomerMemberSelected = document.querySelector("#CustomerMemberSelected");
        let CustomerMemberInput = document.querySelector("#CustomerMemberInput");
        CustomerMemberSelected.addEventListener("change", function () {
            CustomerMemberInput.value = CustomerMemberSelected.value;
        })
    </script>
}