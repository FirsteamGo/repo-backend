@model prjCoreFT.ViewModel.CSetOrderViewModel

@{
    ViewData["Title"] = "SetOrderEdit";
}

<h1>套裝訂單修改</h1>

<h4>套裝訂單</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SetOrderEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="套裝訂單id" value="@Model.套裝訂單ID" />
            @*<div class="form-group">
                <input asp-for="套裝訂單編號" class="form-control" hidden />
                <label class="control-label">訂單編號: @Html.DisplayFor(s=>s.套裝訂單編號)</label>
            </div>*@
            <div class="form-group">
                <input type="hidden" name="會員id" value="@Model.會員ID" />
                <label class="control-label">姓名: @Html.DisplayFor(s=>s.會員姓名)</label>
            </div>
            <div class="form-group">
                <label asp-for="Product.套裝行程id" class="control-label" hidden></label>
                <input asp-for="Product.套裝行程id" class="form-control" id="CustomerGenderInput" hidden />
                <label class="control-label">套裝方案</label>
                <select id="CustomerGenderSelected" name="Product.套裝行程id" class="form-select">
                    <optgroup label="請選擇套裝方案">
                        <option selected disabled hidden>請選擇套裝方案</option>
                        @{
                            foreach (var item in Model.套裝行程表單)
                            {
                                <option value=@item.套裝行程id> @item.套裝方案</option>
                            }
                        }
                    </optgroup>
                </select>
                <span asp-validation-for="Product.套裝行程id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="入住時間" class="control-label"></label>
                <input asp-for="入住時間" class="form-control" />
                <span asp-validation-for="入住時間" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="退住時間" class="control-label"></label>
                <input asp-for="退住時間" class="form-control" />
                <span asp-validation-for="退住時間" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="預計人數" class="control-label"></label>
                <input asp-for="預計人數" class="form-control" />
                <span asp-validation-for="預計人數" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="合計總價" class="control-label"></label>
                <input asp-for="合計總價" class="form-control" />
                <span asp-validation-for="合計總價" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="評論" class="control-label"></label>
                <input asp-for="評論" class="form-control" />
                <span asp-validation-for="評論" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="評分" class="control-label"></label>
                <input asp-for="評分" class="form-control" />
                <span asp-validation-for="評分" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="建立人" class="control-label"></label>
                <input asp-for="建立人" class="form-control" />
                <span asp-validation-for="建立人" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="建立時間" class="control-label"></label>
                <input asp-for="建立時間" class="form-control" />
                <span asp-validation-for="建立時間" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="修改人" class="control-label"></label>
                <input asp-for="修改人" class="form-control" />
                <span asp-validation-for="修改人" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="修改時間" class="control-label"></label>
                <input asp-for="修改時間" class="form-control" />
                <span asp-validation-for="修改時間" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="確認修改套裝訂單" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SetOrder">返回套裝訂單表單</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        let CustomerGenderSelected = document.querySelector("#CustomerGenderSelected");
        let CustomerGenderInput = document.querySelector("#CustomerGenderInput");
        CustomerGenderSelected.addEventListener("change", function () {
            CustomerGenderInput.value = CustomerGenderSelected.value;
        })
    </script>
}