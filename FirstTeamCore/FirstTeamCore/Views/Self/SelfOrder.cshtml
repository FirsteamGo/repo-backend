                        @Html.ActionLink("修改", "SelfOrderEdit", new { id=item.自選訂單id }, new { @class="btn btn-success" })  |
                        @Html.ActionLink("刪除", "OrderDelete", new { id=item.自選訂單id }, new{onclick="return confirm('確定要刪除嗎?')",@class="btn btn-danger"})
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
