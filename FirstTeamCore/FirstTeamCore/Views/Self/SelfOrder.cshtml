                    <td>
                        @Html.DisplayFor(modelItem => item.自選飲食.商品名稱)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.租賃商店.產品名稱)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.租賃商店.單日租金)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.租借總價)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.自選訂單總價)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.評論)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.評分)
                    </td>
                    @*<td>
            @Html.DisplayFor(modelItem => item.建立人)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.建立時間)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.修改人)
            </td>
            <td>
