@model IEnumerable<prjCoreFT.Models.SelfFood>

@{
    ViewData["Title"] = "SelfFood";
}



<h1>自選飲食</h1>

<!-- 上方索引層 -->
<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">行程管理:自選</li>
            <li class="breadcrumb-item active">自選飲食</li>
        </ol>
    </nav>
</div>
<!-- 索引層end -->
@using (Html.BeginForm())
{
    <p>
        關鍵字
        @Html.TextBox("txtKeyword")
        <input type="submit" value="查詢" class="btn btn-secondary" />
    </p>
}


<p>
    <a asp-action="FoodCreate" class="btn btn-primary">新增產品</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                序號
            </th>
            <th>
                @Html.DisplayNameFor(model => model.商品名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.商品內容)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.圖片)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.單價)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.需求人數)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.需求份數)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.建立人)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.建立時間)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.修改人)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.修改時間)
            </th>*@

            <th></th>
        </tr>
    </thead>
    <tbody>

        @{
            int count = 0;
            foreach (var item in Model)
            {

                count++;

                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.商品名稱)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.商品內容)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.圖片)*@
                        <img src="~/images/@item.圖片" width="100" height="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.單價)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.需求人數)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.需求份數)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.建立人)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.建立時間)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.修改人)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.修改時間)
                    </td>*@

                    <td>
                        @Html.ActionLink("修改", "FoodEdit", new { id=item.自選飲食id }, new { @class="btn btn-success" })|
                        @Html.ActionLink("刪除", "Delete","Self", new {id=item.自選飲食id },new{onclick="return confirm('確定要刪除嗎?')",@class="btn btn-danger"})
                    </td>
                </tr>
            }
        }
    </tbody>
</table>



<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>






